<%= render 'layouts/header' %>

<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
      <h1 class="text-center title">Microposts</h1>
      <div class="col-lg-12 form-group">
         <h3><label>Welcome</label>
         <%= link_to current_user.name, user_path(current_user) %></h3>
      </div>
      <%= link_to 'Create micropost',new_micropost_path,class:"btn btn-success" %>
      <table class="table table-striped" >
        <thead>
          <tr>
            <th class="text-center">ID micropost</th>
            <th>Content</th>
            <th>User Id</th>
            <th colspan="3"></th>
          </tr>
        </thead>

         <tbody >
          <% @microposts.each do |micropost| %>
            <tr>
              <td class="text-center"><%= micropost.id %></td>
              <td><%= micropost.content %></td>
              <td><%= micropost.user_id %></td>
              <td><%= link_to 'Show', micropost %></td>
              <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
              <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
         </tbody>
        </table>

       <br>
            
    </div>
</div>
